<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tuanbi97.opencvtest.MixActivity"
    android:background="@drawable/bgmix">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent">
        <com.tuanbi97.opencvtest.ImageListView
            android:layout_marginTop = "4dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/setimage"
            android:layout_width="90dp"
            android:layout_height="270dp" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_save_white_48dp"
            android:onClick="clickSave"/>
    </LinearLayout>
    <com.tuanbi97.opencvtest.MixView
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:id="@+id/mixview"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent">
        <com.tuanbi97.opencvtest.ImageListView
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/setbackground"
            android:layout_width="90dp"
            android:layout_height="270dp" />
        <ImageButton
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/merge"
            android:onClick="clickPoissonBlend"/>
    </LinearLayout>
</LinearLayout>
